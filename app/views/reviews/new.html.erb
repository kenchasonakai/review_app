<div class="container m-5">
  <div class="d-flex align-items-stretch w-50 mx-auto">
    <div>
      <%= image_tag @item.response['Items'].first["mediumImageUrls"][0], class: 'img-thumbnail' %>
    </div>
    <p class='w-75 ms-3 border p-2'>
      <%= resize_text(@item.response['Items'].first["itemName"], 100) %>
    </p>
  </div>
  <%= form_with model: @review, class: 'form-group w-50 mx-auto' do |f| %>
    <div class="mb-3">
      <%= f.label "ニックネーム", class: "form-label" %>
      <%= f.text_field "user_name", class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label "評価", class: "form-label" %>
      <%= f.number_field "score", class: "form-control", in: 1.0..5.0, step: 0.5 %>
    </div>
    <div class="mb-3">
      <%= f.label "レビュー", class: "form-label" %>
      <%= f.text_area "content", class:"form-control" %>
    </div>
      <%= f.hidden_field "item_code", value: params[:item_code] %>
    <div class="mb-3">
      <%= f.submit "登録", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>